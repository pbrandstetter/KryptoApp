<Window x:Class="KryptoApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KryptoApp"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="82,79,0,0" VerticalAlignment="Top"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="82,131,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="UsernameInput" HorizontalAlignment="Left" Margin="167,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="PasswordInput" HorizontalAlignment="Left" Margin="167,135,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Margin="211,173,0,0" VerticalAlignment="Top" Width="76" Click="LoginButton_Click"/>
        <Label Content="Do we meet the first time?" HorizontalAlignment="Left" Margin="82,227,0,0" VerticalAlignment="Top"/>
        <Button x:Name="RegisterButton" Content="Register" HorizontalAlignment="Left" Margin="211,258,0,0" VerticalAlignment="Top" Width="76" Background="#FFDDDDDD" FontWeight="Normal" Click="RegisterButton_Click"/>

    </Grid>
</Window>
